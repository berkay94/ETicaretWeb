@model ETicaretWeb.Models.Urunler
    @using ETicaretWeb.Models
@{
    ViewBag.Title = Model.UrunAdi;
    IEnumerable<Kategori> KategoriListesi = ViewBag.KategoriListesi as IEnumerable<Kategori>;
}

<div class="jumbotron">
    <h2>@Model.UrunAdi</h2>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Kategoriler</h2>
        <ul>
            @foreach (var item in KategoriListesi)
            {
                <li>@Html.ActionLink(item.KategoriAdi,"Kategori",new { id = item.KategoriId })</li>
            }
        </ul>
    </div>

    <div class="col-md-9">
        <h1><b> Urun Adi</b></h1>
        <h5>@Model.UrunAdi</h5>
        <div class="row">
            <div class="col-md-6">
                <img src="~/Resim/@(Model.UrunId).jpg" alt="@Model.UrunAdi" style="max-width:100%"/>

            </div>

            <div class="col-md-6">Urun Fiyat:
            <span style="color:red;font-weight:bold;font-size:16px">@Model.UrunFiyat TL</span>
            <form action="/Sepets/SepeteEkle" method="post">
                <input type="hidden" name="id" value="@Model.UrunId" style="width:50px"/>
                <input type="number" name="adet" value="1" style="width:50px"/>
            </form>
            </div>
        </div>

        <h1><b><i>Urun Aciklamasi</i></b></h1>
        <p>@MvcHtmlString.Create(Model.UrunAciklama)</p>
    </div>
</div>

